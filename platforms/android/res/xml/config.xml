<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="10004" id="cueblocks.app.allthatgrows" version="1.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="Camera">
        <param name="android-package" value="org.apache.cordova.camera.CameraLauncher" />
    </feature>
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="BarcodeScanner">
        <param name="android-package" value="com.phonegap.plugins.barcodescanner.BarcodeScanner" />
    </feature>
    <feature name="NetworkStatus">
        <param name="android-package" value="org.apache.cordova.networkinformation.NetworkManager" />
    </feature>
    <feature name="StatusBar">
        <param name="android-package" value="org.apache.cordova.statusbar.StatusBar" />
        <param name="onload" value="true" />
    </feature>
    <feature name="FabricPlugin">
        <param name="android-package" value="com.sarriaroman.fabric.FabricPlugin" />
        <param name="onload" value="true" />
    </feature>
    <allow-intent href="market:*" />
    <preference name="android-targetSdkVersion" value="22" />
    <preference name="android-minSdkVersion" value="14" />
    <preference name="orientation" value="portrait" />
    <icon density="ldpi" src="icons/ldpi.png" />
    <icon density="mdpi" src="icons/mdpi.png" />
    <icon density="hdpi" src="icons/hdpi.png" />
    <icon density="xhdpi" src="icons/xhdpi.png" />
    <splash platform="android" qualifier="ldpi" src="splash/drawable-ldpi/ldpi.png" />
    <splash platform="android" qualifier="mdpi" src="splash/drawable-mdpi/ldpi.png" />
    <splash platform="android" qualifier="hdpi" src="splash/drawable-hdpi/ldpi.png" />
    <splash platform="android" qualifier="xhdpi" src="splash/drawable-xhdpi/ldpi.png" />
    <splash platform="android" qualifier="xxhdpi" src="splash/drawable-xxhdpi/ldpi.png" />
    <splash platform="android" qualifier="xxxhdpi" src="splash/drawable-xxxhdpi/ldpi.png" />
    <name>All That Grows</name>
    <preference name="android-build-tool" value="gradle" />
    <description>
        ATG App to scan product QR codes
    </description>
    <author email="ankitk@cueblocks.com" href="http://cordova.io">
        Cueblocks Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
</widget>
