<?xml version='1.0' encoding='utf-8'?>
<widget id="cueblocks.app.allthatgrows" android-versionCode="10005" version="1.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>AllThatGrows</name>
    <preference name="android-build-tool" value="gradle" />
    <description>
        ATG App to scan product QR codes
    </description>
    <author email="ankitk@cueblocks.com" href="http://cordova.io">
        Cueblocks Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-camera" source="npm" spec="~2.1.1" />
    <plugin name="cordova-plugin-whitelist" source="npm" spec="~1.2.1" />
    
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="android-targetSdkVersion" value="22" />
        <preference name="android-minSdkVersion" value="14" />
        <preference name="orientation" value="portrait" />
        <icon density="ldpi" src="icons/ldpi.png" />
        <icon density="mdpi" src="icons/mdpi.png" />
        <icon density="hdpi" src="icons/hdpi.png" />
        <icon density="xhdpi" src="icons/xhdpi.png" />
        <splash platform="android" qualifier="ldpi" src="splash/drawable-ldpi/ldpi.png" />
        <splash platform="android" qualifier="mdpi" src="splash/drawable-mdpi/ldpi.png" />
        <splash platform="android" qualifier="hdpi" src="splash/drawable-hdpi/ldpi.png" />
        <splash platform="android" qualifier="xhdpi" src="splash/drawable-xhdpi/ldpi.png" />
        <splash platform="android" qualifier="xxhdpi" src="splash/drawable-xxhdpi/ldpi.png" />
        <splash platform="android" qualifier="xxxhdpi" src="splash/drawable-xxxhdpi/ldpi.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="StatusBarOverlaysWebView" value="false" />
        <preference name="StatusBarStyle" value="default" />
        <preference name="BackupWebStorage" value="none"/>
        <preference name="orientation" value="portrait" />
        <!-- iPhone 6 / 6+ -->
        <icon src="icons/180-iPhone6Plus.png" platform="ios" width="180" height="180" />

        <!-- iPhone / iPod Touch  -->
        <icon src="icons/Icon-Small-60.png" platform="ios" width="60" height="60" />
        <icon src="icons/120-iPhone.png" platform="ios" width="120" height="120" />

        <!-- iPad -->
        <icon src="icons/76-iPad_1x.png" platform="ios" width="76" height="76" />
        <icon src="icons/152-iPad.png" platform="ios" width="152" height="152" />
        <icon src="icons/Icon-83.5@2x.png" platform="ios" width="167" height="167" />
        
        <!-- Settings Icon -->
        <icon src="icons/Icon-Small-29.png" platform="ios" width="29" height="29" />
        <icon src="icons/58-Settings.png" platform="ios" width="58" height="58" />
        <icon src="icons/Icon-Small-87.png" platform="ios" width="87" height="87" />

        <!-- Spotlight Icon -->
        <icon src="icons/Icon-Small-40@1x.png" platform="ios" width="40" height="40" />
        <icon src="icons/80-Spotlight.png" platform="ios" width="80" height="80" />
        <icon src="icons/Icon-Small-60@2x.png" platform="ios" width="120" height="120" />
        
        <!-- iPhone and iPod touch -->
        <splash src="splash/splash@320.png" platform="ios" width="320" height="480" />
        <splash src="splash/splash@640x960.png" platform="ios" width="640" height="960" />

        <!-- iPhone 5 / iPod Touch (5th Generation) -->
        <splash src="splash/splash@640.png" platform="ios" width="640" height="1136" />

        <!-- iPhone 6 -->
        <splash src="splash/splash@2x.png" platform="ios" width="750" height="1334" />
        <splash src="splash/splash@1242.png" platform="ios" width="1242" height="2208" />
        <splash src="splash/splash@2208.png" platform="ios" width="2208" height="1242" />

        <!-- iPad -->
        <splash src="splash/splash@768x1024.png" platform="ios" width="768" height="1024" />
        <splash src="splash/splash@1024x768.png" platform="ios" width="1024" height="768" />

        <!-- Retina iPad -->
        <splash src="splash/splash@1536x2048.png" platform="ios" width="1536" height="2048" />
        <splash src="splash/splash@2048x1536.png" platform="ios" width="2048" height="1536" />
        
        <!--IOS 6.1 version-->
        
        <!-- iPhone / iPod Touch -->
        <icon src="icons/57@1x.png" platform="ios" width="57" height="57" />
        <icon src="icons/57@2x.png" platform="ios" width="114" height="114" />

        <!-- iPad -->
        <icon src="icons/72@1x.png" platform="ios" width="72" height="72" />
        <icon src="icons/72@2x.png" platform="ios" width="144" height="144" />

        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="icons/29@1x.png" platform="ios" width="29" height="29" />
        <icon src="icons/29@2x.png" platform="ios" width="58" height="58" />

        <!-- iPad Spotlight and Settings Icon -->
        <icon src="icons/50@1x.png" platform="ios" width="50" height="50" />
        <icon src="icons/50@2x.png" platform="ios" width="100" height="100" />
    </platform>
    <engine name="android" spec="~5.0.0" />
    <plugin name="cordova-plugin-ignore-lint-translation" spec="~0.0.1" />
</widget>
