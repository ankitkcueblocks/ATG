<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>All That Grows</name>
    <preference name="android-build-tool" value="gradle" />
    <description>
        ATG App to scan product QR codes
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Cueblocks Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
	<access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
	<!--<icon src="icons/ldpi.png" platform="android" qualifier="ldpi" />
	<icon src="icons/mdpi.png" platform="android" qualifier="mdpi" />
	<icon src="icons/hdpi.png" platform="android" qualifier="hdpi" />
	<icon src="icons/xhdpi.png" platform="android" qualifier="xhdpi" />
	<icon src="icons/xxhdpi.png" platform="android" qualifier="xxhdpi" /> -->
	
	<platform name="android">
		<allow-intent href="market:*" />
		<preference name="android-targetSdkVersion" value="23"/>
		<preference name="android-minSdkVersion" value="14" />
		<icon src="icons/ldpi.png" density="ldpi" />
		<icon src="icons/mdpi.png" density="mdpi" />
		<icon src="icons/hdpi.png" density="hdpi" />
		<icon src="icons/xhdpi.png" density="xhdpi" />
    </platform>
	<platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~5.0.0" />
</widget>
